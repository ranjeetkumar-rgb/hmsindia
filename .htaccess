

# Enable URL rewriting
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Block access to sensitive directories
    RewriteRule ^(application|system|vendor|backups|db|staging)/ - [F,L]
    
    # Handle Angular and other frontend routes
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/assets/
    RewriteCond %{REQUEST_URI} !^/index\.php
    RewriteRule ^(.*)$ index.php/$1 [L,QSA]
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Disable server signature
ServerSignature Off

# Hide PHP version
<IfModule mod_headers.c>
    Header unset X-Powered-By
</IfModule>

# File upload settings
php_value upload_max_filesize 50M
php_value post_max_size 50M
php_value max_execution_time 300
php_value memory_limit 256M

# Prevent direct access to sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|sql|conf|config)$">
    Require all denied
</FilesMatch>

# Block access to composer and package files
<FilesMatch "^(composer\.(json|lock)|package\.json|\.env)$">
    Require all denied
</FilesMatch>

# Prevent access to version control files
<FilesMatch "\.(git|svn)$">
    Require all denied
</FilesMatch>

# Block access to specific sensitive files
<Files "composer.json">
    Require all denied
</Files>

<Files "composer.lock">
    Require all denied
</Files>

<Files ".env">
    Require all denied
</Files>

<Files ".git">
    Require all denied
</Files>

# Error pages
ErrorDocument 404 /index.php

